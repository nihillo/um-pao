include ../components/header
include ../components/sections
include ../components/video-article
include ../components/cards



extends ../layout/layout.jade

block header
	+header(header.headline, header.img)

block breadcrumbs
	div.breadcrumbs
		small.container
			span 
				a(href="index.html") HOME
			| &nbsp;&gt;&nbsp;

			span 
				a(href="proyectos.html") PROYECTOS
			| &nbsp;&gt;&nbsp;

			span #{title}

block main-content
	+section-fl(firstSection.title, firstSection.text, firstSection.bigImg.src, firstSection.bigImg.alt, firstSection.smallImg.src, firstSection.smallImg.alt)

	section
		+video-yt-right(videosSection.video.title, videosSection.video.subtitle, videosSection.video.src)

	+section-rep(repertorio.title, repertorio.bigImg.src, repertorio.bigImg.alt, repertorio.smallImg.src, repertorio.smallImg.alt, repertorio.list)